<!--section-->
<section class="container-fluid">
  <!--Big fat DIV-->
  <div class="row-fluid">
    <!--Div of Textarea and Codemask-->
    <div class="col-md-offset-1 form-group col-md-5 ">

      <label for="Text">Text:</label>
      <!--Textarea Div-->
      <div id="textArea" class="editable form-control bg-primary" contenteditable="true" >
      </div>

      <button id="analyse" type="button" class="btn btn-primary">Analyse</button>

      <!-- Modal -->
      <div id="popup" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">

          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="btn btn-default close" data-dismiss="modal">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              </button>
              <h1>{{this.title}} </h1>
              <h4> {{this.description}}</h4>
            </div>
            <div class="modal-body container">
              <div class="col-md-12" id="infoField-wrapper">
                <label>Information:</label>
                <div class="col-md-12" id="infoField">
                  <div class="col-md-12" id="infoWordWrapper">
                    <label class="col-md-1">Word:</label>
                    <div class="col-md-9" id="infoWord"></div>
                  </div>
                  <div class="col-md-12" id="infoDetailsWrapper">
                    <div class="col-md-6" id="infoSynonymsWrapper">
                      <label>Synonyme:</label>
                      <div class="col-md-12" id="infoSynonyms">
                        <ul class="list-group" id="synonymsList">
                        </ul>
                      </div>
                    </div>
                    <div class="col-md-6" id="infoRelatedCodesListWrapper">
                      <label>Codes:</label>
                      <div class="col-md-12" id="infoRelatedCodes"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>


      <!--Div for the InfoField-->
      <div class="col-md-12" id="infoField-wrapper">
        <label>Information:</label>
        <div class="col-md-12" id="infoField">
              <div class="col-md-12" id="infoWordWrapper">
                <label class="col-md-1">Word:</label>
                <div class="col-md-9" id="infoWord"></div>
              </div>
              <div class="col-md-12" id="infoDetailsWrapper">
                <div class="col-md-6" id="infoSynonymsWrapper">
                  <label>Synonyme:</label>
                  <div class="col-md-12" id="infoSynonyms">
                    <ul class="list-group" id="synonymsList">
                    </ul>
                  </div>
                </div>
                <div class="col-md-6" id="infoRelatedCodesListWrapper">
                  <label>Codes:</label>
                  <div class="col-md-12" id="infoRelatedCodes"></div>
                </div>
              </div>
        </div>
      </div>

      <!--CodeMask Div-->
      <div id="codeMaskWrapper">
        <label>Code mask:</label>
        <!-- Nav tabs for the list of the mask -->
        <ul class="nav nav-tabs" id="maskTabs" role="tablist">
          <li role="presentation" class="active"><a id="allMaskLink" href="#allMask" aria-controls="allMask" role="tab" data-toggle="tab">Alle</a></li>
          <li role="presentation"><a class="filterTab" href="#mainDiagnosesMask" aria-controls="mainDiagnosesMask" role="tab" data-toggle="tab" data-categoryId="0">Hauptdiagnosen</a></li>
          <li role="presentation"><a class="filterTab withAddButton" href="#sideDiagnosesMask" aria-controls="sideDiagnosesMask" role="tab" data-toggle="tab" data-categoryId="1">Nebendiagnosen</a></li>
          <li role="presentation"><a class="filterTab withAddButton" href="#proceduresMask" aria-controls="proceduresMask" role="tab" data-toggle="tab" data-categoryId="2">Prozeduren</a></li>
        </ul>

        <!-- Tab panes with the lists of the mask -->
        <div class="tab-content codeMaskLists">
          <div role="tabpanel" class="tab-pane active" id="allMask">
            <ul class="list-group unselectable code-maskList" id="allListMask">
              <li class='list-group-item mainNewCode' data-categoryId="0"><div class='text_field editing' contenteditable='true'></div><div class='dropdown'><a data-toggle='dropdown' class='dropdown-toggle'></a><ul class='dropdown-menu'></ul></div><button class='zbutton doneButton' type='button'>Add</button><button class='zbutton editButton' type='button'>Edit</button></li>
            </ul>
          </div>
        </div>

      <button id="addCodeButton" type="button" class="btn btn-primary">Add code</button>
      </div>
    </div>


    <!--Code Lists-->
    <div class="form-group col-md-5  " id="codeLists">

      <div id="mainDiagnoses">
        <label>Hauptdiagnosen:</label>
        <ul class="list-group selectable codeList" id="mainDiagnosesList">
        </ul>
      </div>


      <div id="sideDiagnoses">
        <label>Nebendiagnosen:</label>
        <ul class="list-group selectable codeList" id="sideDiagnosesList">
        </ul>
      </div>


      <div id="Proccedures">
        <label>Prozeduren:</label>
        <ul class="list-group selectable codeList" id="proceduresList">
        </ul>
      </div>
    </div>


  </div>

