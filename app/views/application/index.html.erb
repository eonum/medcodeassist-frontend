<!--section-->
<section class="container-fluid">
  <!--Big fat DIV-->
  <div class="row-fluid">
    <!--Div of Textarea and Codemask-->
    <div class="col-md-offset-1 form-group col-md-5 ">

      <label for="Text">Textanalyse:</label>
      <!--Textarea Div-->
      <div id="textArea" class="editable form-control bg-primary" contentEditable="true" data-prompt="Bitte hier den medizinischen Text zur Analyse eingeben"></div>

      <button id="analyse" type="button" class="btn btn-primary">Analysieren</button>

      <!-- Modal/Popup -->
      <div id="popup" class="modal fade" role="dialog">
        <div id="popupContent" class="modal-dialog modal-lg">

          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <div class="col-md-12" id="info">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4>Information</h4>
              </div>
            </div>

            <div class="modal-body">
              <div class="col-md-12" id="infoWordWrapper">
                <div class="col-xs-2"><h4>Word:</h4></div>
                <div class="col-xs-9" id="infoWordDiv"><h4 id="infoWord"></h4></div>
              </div>
              <div class="col-md-12" id="infoSynonymsWrapper">
                <h5>Synonyme:</h5>
                <div class="col-md-12" id="infoSynonyms">
                  <ul class="list-group" id="synonymsList">
                  </ul>
                </div>
              </div>
              <div class="col-md-12" id="infoRelatedCodesListWrapper">
                <h5>Codes:</h5>
                <div class="form-group col-md-12" id="infoRelatedCodes">
                  <!--Code Lists-->
                    <div id="mainDiagnoses">
                      <label>Hauptdiagnosen:</label>
                      <ul class="list-group codeList" id="mainDiagnosesRelatedList">
                      </ul>
                    </div>


                    <div id="sideDiagnoses">
                      <label>Nebendiagnosen:</label>
                      <ul class="list-group codeList" id="sideDiagnosesRelatedList">
                      </ul>
                    </div>


                    <div id="Proccedures">
                      <label>Prozeduren:</label>
                      <ul class="list-group codeList" id="proceduresRelatedList">
                      </ul>
                    </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>

      <!--CodeMask Div-->
      <div id="codeMaskWrapper">
        <label>Kodemaske:</label>
        <!-- Nav tabs for the list of the mask -->
        <ul class="nav nav-tabs" id="maskTabs" role="tablist">
          <li id="allTab" role="presentation" class="active"><a id="allMaskLink" href="#allMask" aria-controls="allMask" role="tab" data-toggle="tab">Alle</a></li>
          <li class="mainDiagnoses" role="presentation"><a class="filterTab" href="#allMask" aria-controls="mainDiagnosesMask" role="tab" data-toggle="tab" data-category="mainDiagnoses">Hauptdiagnosen</a></li>
          <li class="sideDiagnoses" role="presentation"><a class="filterTab withAddButton" href="#allMask" aria-controls="sideDiagnosesMask" role="tab" data-toggle="tab" data-category="sideDiagnoses">Nebendiagnosen</a></li>
          <li class="procedures" role="presentation"><a class="filterTab withAddButton" href="#allMask" aria-controls="proceduresMask" role="tab" data-toggle="tab" data-category="procedures">Prozeduren</a></li>
        </ul>

        <!-- Tab panes with the lists of the mask -->
        <div class="tab-content" id="codeMaskLists">
          <div role="tabpanel" class="tab-pane active" id="allMask">
            <ul class="list-group codeMaskList" id="allListMask">
              <li class='list-group-item mainDiagnoses' id="newMainCode" data-category="mainDiagnoses"><div class="text_field editing redBackground" contenteditable="true" data-prompt="Typen Sie hier"></div><div class="dropdown"><a data-toggle='dropdown' class='dropdown-toggle'></a><ul class="dropdown-menu"></ul></div><button class="zbutton doneButton" type="button">Add</button><button class="zbutton eraseButton" type="button">Delete</button></li>
            </ul>
          </div>
        </div>

      <button id="addCodeButton" type="button" class="btn btn-primary">Kode hinzufügen</button>
      <button id="cancelButton" type="button" class="btn btn-primary">Letzte Zeile löschen</button>
      </div>
    </div>

    <!--Code Lists-->
    <div class="form-group col-md-5  " id="codeLists">

      <div id="mainDiagnoses">
        <label>Hauptdiagnosen:</label>
        <ul class="list-group codeList" id="mainDiagnosesList">
        </ul>
      </div>


      <div id="sideDiagnoses">
        <label>Nebendiagnosen:</label>
        <ul class="list-group codeList" id="sideDiagnosesList">
        </ul>
      </div>


      <div id="Proccedures">
        <label>Prozeduren:</label>
        <ul class="list-group codeList" id="proceduresList">
        </ul>
      </div>
    </div>

  </div>

</section>


